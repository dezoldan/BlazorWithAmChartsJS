@page "/GraficoTeste"    
@inject IJSRuntime JS

<h3>GraficoExample</h3>

<div id="chartdiv" style="width: 100%; height: 500px;"></div>  

@code {
    
    public class PaisesCidadania
    {
        public string? country { get; set; }
        public int litres { get; set; }
    }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        List<PaisesCidadania> paises = new List<PaisesCidadania>();

        if (firstRender)
        {
            paises.Add(new PaisesCidadania { country = "Albania", litres = 28107});
            paises.Add(new PaisesCidadania { country = "Macedonia", litres = 3230});
            paises.Add(new PaisesCidadania { country = "Romenia", litres =  11449});
            paises.Add(new PaisesCidadania { country = "Marrocos", litres = 18024});
            paises.Add(new PaisesCidadania { country = "Brasil", litres = 7149});        
            await JS.InvokeVoidAsync("CriarGrafico", args:paises);  
            StateHasChanged();
        }
    }
}
